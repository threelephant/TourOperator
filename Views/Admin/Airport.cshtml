@model Airport

<h2>Добавить аэропорт</h2>

<form asp-action="Airport" asp-controller="Admin" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Name">Название аэропорта</label>
        <input type="text" asp-for="Name" />
    </div>
    
    <div>
        <label asp-for="TownId">Город нахождения аэропорта</label>
        <select asp-for="TownId" asp-items="ViewBag.Towns"></select>
    </div>
    <div>
        <input type="submit" value="Добавить" />
    </div>
</form>

@section scripts
{
    <script>
        $(document).ready(() => {
            $('select').formSelect();
        })
    </script>
}
