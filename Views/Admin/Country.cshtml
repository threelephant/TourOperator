@model Country

<h2>Добавить страну</h2>

<form asp-action="Country" asp-controller="Admin" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Name">Название страны</label>
        <input type="text" asp-for="Name" />
    </div>
    <div>
        <input type="submit" value="Добавить" />
    </div>
</form>