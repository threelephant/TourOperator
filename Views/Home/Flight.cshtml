@{
    ViewData["Title"] = "Заказать";
}

@model Flight

<h2>Заказать билет @(ViewBag.IsDeparture ? "до отеля" : "обратно")</h2>

<form asp-action="AddFlight" asp-controller="Home" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly"></div>
    
    <div>
        <label asp-for="AirportArrivalId">Аэропорт отправления</label>
        <select asp-for="AirportArrivalId" asp-items="ViewBag.Airports"></select>
    </div>
    
    <div>
        <label asp-for="AirportDepartureId">Аэропорт прибытия</label>
        <select asp-for="AirportDepartureId" asp-items="ViewBag.Airports"></select>
    </div>

    <div>
        <label asp-for="DateFlight">Дата отправления</label>
        <input type="date" asp-for="DateFlight">
    </div>

    <input type="hidden" name="tourId" value="@ViewBag.TourId" />
    <input type="hidden" name="isDeparture" value="@ViewBag.IsDeparture.ToString()" />
    
    <button class="btn-large waves-effect waves-light" style="text-transform: initial;" type="submit" name="action">Заказать</button>
    <button class="btn-large waves-effect waves-light" style="text-transform: initial;" type="reset" name="action">Отмена</button>
</form>

@section scripts
{
    <script>
        $(document).ready(() => {
            $('select').formSelect();
        })
    </script>
}